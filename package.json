{
  "name": "lanonasis-aether-memory",
  "version": "2.0.0-hackathon",
  "private": true,
  "description": "ARM-Optimized AI Memory Companion - Cross-platform Memory-as-a-Service with On-Device Intelligence",
  "repository": {
    "type": "git",
    "url": "https://github.com/lanonasis/aether-memory"
  },
  "author": "LanOnasis <hello@lanonasis.com>",
  "license": "MIT",
  "keywords": [
    "arm",
    "ai",
    "memory",
    "embeddings",
    "offline-first",
    "pwa",
    "vscode-extension",
    "developer-tools",
    "transformers.js",
    "maas",
    "mcp"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@lanonasis/web",
    "dev:mobile": "turbo run dev --filter=@lanonasis/mobile-pwa",
    "dev:extension": "turbo run dev --filter=@lanonasis/vscode-extension",
    "build": "turbo run build",
    "build:mobile": "turbo run build --filter=@lanonasis/mobile-pwa",
    "build:extension": "turbo run build --filter=@lanonasis/vscode-extension",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "demo": "concurrently \"npm run dev:mobile\" \"npm run dev:web\""
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^20.19.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "turbo": "^2.6.1",
    "typescript": "^5.6.3",
    "vite": "^7.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.0",
  "turbo": {
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
      "**/.env.*local"
    ],
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**",
          "out/**"
        ]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "test": {
        "dependsOn": [
          "build"
        ]
      },
      "lint": {},
      "typecheck": {}
    }
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.11",
    "@xenova/transformers": "^2.17.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.555.0",
    "tailwind-merge": "^3.4.0",
    "wouter": "^3.8.0"
  }
}
