{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "ignoreDeprecations": "6.0",
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,
    "types": [
      "node",
      "vscode"
    ],
    "paths": {
      "@/*": [
        "../../client/src/*"
      ],
      "@lanonasis/shared": [
        "../shared/src/index.ts"
      ],
      "@lanonasis/shared/*": [
        "../shared/src/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/webview/**/*"
  ]
}