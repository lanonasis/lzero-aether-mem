{
  "name": "@lanonasis/shared",
  "version": "2.0.0-hackathon",
  "description": "Shared SDK, types, and utilities for LanOnasis cross-platform Memory-as-a-Service",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./sdk": {
      "import": "./src/sdk/index.ts",
      "types": "./src/sdk/index.ts"
    },
    "./sdk/react-hooks": {
      "import": "./src/sdk/react-hooks.ts",
      "types": "./src/sdk/react-hooks.ts"
    },
    "./ai": {
      "import": "./src/ai/embeddings.ts",
      "types": "./src/ai/embeddings.ts"
    },
    "./types": {
      "import": "./src/types/index.ts",
      "types": "./src/types/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext ts,tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "lucide-react": "^0.400.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/react": "^19.2.0",
    "typescript": "^5.6.3"
  }
}
