{
  "name": "@lanonasis/web-extension",
  "version": "0.1.0",
  "private": true,
  "description": "L0 Memory Browser Extension - Chrome, Firefox, Edge",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build",
    "build:chrome": "BROWSER=chrome vite build",
    "build:firefox": "BROWSER=firefox vite build",
    "package": "npm run build && node scripts/package.js",
    "package:chrome": "npm run build:chrome && cd dist && zip -r ../lzero-memory-chrome.zip .",
    "package:firefox": "npm run build:firefox && cd dist && zip -r ../lzero-memory-firefox.zip .",
    "lint": "eslint . --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist *.zip"
  },
  "dependencies": {
    "@lanonasis/memory-client": "^2.0.0",
    "@lanonasis/shared": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.23.25",
    "idb": "^8.0.3",
    "lucide-react": "^0.545.0",
    "react": "19.3.0-canary-378973b3-20251205",
    "react-dom": "19.3.0-canary-378973b3-20251205",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/chrome": "^0.0.287",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^3.2.4"
  }
}
